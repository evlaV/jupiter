# Maintainer: Vicki Pfau (vi@endrift.com)

pkgname=powerbuttond
_srctag=v2
pkgver=${_srctag##v}
pkgrel=1
arch=('x86_64')
url="https://github.com/evlav/powerbuttond"
pkgdesc="Power button daemon"
license=('BSD')
depends=('libevdev')
source=("git+https://github.com/evlav/powerbuttond.git#tag=$_srctag")
sha512sums=(SKIP)

build() {
	make -C "$srcdir/$pkgname"
}

package() {
	make -C "$srcdir/$pkgname" install DESTDIR="$pkgdir"
}
