# Maintainer: Vicki Pfau (vi@endrift.com)

pkgname=wakehook
_srctag=v2.1
pkgver=${_srctag##v}
pkgrel=1
arch=('x86_64')
url="https://github.com/evlav/wakehook"
pkgdesc="Simple HDMI-CEC wakeup-on-resume daemon"
license=('BSD')
depends=('libcec' 'plasma-remotecontrollers' 'systemd')
source=("git+https://github.com/evlav/wakehook.git#tag=$_srctag")
sha256sums=(SKIP)

build() {
	make -C "$srcdir/$pkgname"
}

package() {
	make -C "$srcdir/$pkgname" install DESTDIR="$pkgdir"
}
